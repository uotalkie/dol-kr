<<elseif $dyeOption isnot "noChange">>
	<<if $dyedHairPart is "sides" or $dyedHairPart is "hair">>
		<<set $haircolour to clone($dyeOption)>>
	<</if>>
	<<if $dyedHairPart is "fringe" or $dyedHairPart is "hair">>
